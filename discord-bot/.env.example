# Discord Bot Configuration
# Copy this to .env and fill in your values

# Discord Bot Credentials (get from Discord Developer Portal)
DISCORD_BOT_TOKEN=your-bot-token-here
DISCORD_CLIENT_ID=your-client-id-here

# Optional: Guild ID for testing (faster command registration)
# Leave empty for global commands (takes 1-24 hours to propagate)
DISCORD_GUILD_ID=

# RAG Backend API Configuration
RAG_API_URL=http://localhost:3001/api
RAG_API_KEY=your-ragussy-api-key

# Bot Customization
BOT_NAME=Docs Bot
BOT_COMMAND_PREFIX=!docs
BOT_EMBED_COLOR=0x7c3aed

# Rate limiting (seconds between commands per user)
COOLDOWN_SECONDS=5

# Logging
LOG_LEVEL=info
